<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoFormulario"
    tools:context=".Activity_PostulanteInfo">


    <TextView
        android:id="@+id/textView"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="108dp"
        android:text="Ingrese DNI"
        android:textColor="@color/TextFormulario"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/DniEdit"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/edittext"
        android:backgroundTint="@color/TextFormulario"
        android:contentDescription="Campo Dni" />

    <TextView
        android:id="@+id/textViewParrafo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DniEdit"
        android:layout_marginTop="237dp"
        android:padding="16dp"
        android:textColor="@color/TextFormulario"
        android:textSize="24sp"
        android:text="" />

    <Button
            android:id="@+id/buttonBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="495dp"
        android:backgroundTint="#36C9C6"
        android:text="Buscar" />
</RelativeLayout>