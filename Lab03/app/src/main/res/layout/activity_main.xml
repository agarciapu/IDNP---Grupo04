<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoFormulario"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="194dp"
        android:layout_height="211dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="116dp"
        app:srcCompat="@drawable/perfil2" />

    <TextView
        android:id="@+id/textUsuario"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="163dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="140dp"
        android:text="Usuario"
        android:textColor="@color/TextFormulario"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/idUsuario"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/edittext"
        android:backgroundTint="@color/TextFormulario"
        android:contentDescription="Campo usuario" />

    <TextView
        android:id="@+id/textConstrasenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="129dp"
        android:text="ContraseÃ±a"
        android:textColor="@color/TextFormulario"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/idContrasenia"
        android:layout_width="203dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textConstrasenia"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/edittext"
        android:backgroundTint="@color/TextFormulario"
        android:contentDescription="Campo usuario" />


    <Button
        android:id="@+id/buttonIngresar"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#36C9C6"
        android:text="Ingresar" />

</RelativeLayout >